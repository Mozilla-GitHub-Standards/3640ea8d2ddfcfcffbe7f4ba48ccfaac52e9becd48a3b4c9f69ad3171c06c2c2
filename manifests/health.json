{
    "source": "data/health.json",
    "extraMetadata": {
        "title": "Health of Firefox",
        "defaultCategory": "All",
        "charts": {
            "YAU": {
                "title": "Yearly Active Users",
                "type": "line",
                "axes": {
                    "y": {
                        "unit": "clients",
                        "label": "clients",
                        "suggestedMin": 0
                    }
                }
            },
            "MAU": {
                "title": "Monthly Active Users",
                "type": "line",
                "axes": {
                    "y": {
                        "unit": "clients",
                        "label": "clients"
                    }
                }
            },
            "avg_daily_usage(hours)": {
                "title": "Average Daily Use",
                "type": "line",
                "axes": {
                    "y": {
                        "unit": "hours",
                        "label": "hours"
                    }
                }
            },
            "avg_intensity": {
                "title": "Average Intensity",
                "type": "line",
                "axes": {
                    "y": {
                        "label": "intensity"
                    }
                }
            },
            "pct_new_user": {
                "title": "New Users Percentage",
                "description": "The percentage of clients who were new users.",
                "type": "line",
                "axes": {
                    "x": {
                        "unit": "time"
                    },
                    "y": {
                        "unit": "%"
                    }
                }
            },
            "pct_latest_version": {
                "title": "Latest Version",
                "description": "The percentage of clients running the latest version of Firefox (for that week). Vertical lines represent Firefox release dates. Note, Firefox updates are often throttled at different rates (i.e. 10% of population in week 1, etc.).",
                "type": "line",
                "axes": {
                    "x": {
                        "unit": "time"
                    },
                    "y": {
                        "unit": "%"
                    }
                }
            }
        }
    }
}
